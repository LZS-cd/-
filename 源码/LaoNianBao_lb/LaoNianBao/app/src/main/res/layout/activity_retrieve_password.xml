<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C3E54"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/register_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@mipmap/laonianbaoicon" />

    <TextView
        android:id="@+id/register_text_laonianbao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="找&#160;回&#160;密&#160;码"
        android:textColor="#fff"
        android:textSize="35sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/retri_edit_code"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@+id/retri_bt_getCode"
            android:layout_toStartOf="@+id/retri_bt_getCode"
            android:background="@drawable/yuanjiao"
            android:gravity="center"
            android:hint="xxx-xxxx-xxxx" />

        <Button
            android:id="@+id/retri_bt_getCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/button_yuanjiao"
            android:text="获取验证码"
            android:textColor="#2C3E54"
            android:textSize="15sp" />


    </RelativeLayout>

    <EditText
        android:id="@+id/retri_edit_writeCode"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@drawable/yuanjiao"
        android:gravity="center"
        android:hint="输入验证码" />

    <Button
        android:id="@+id/retri_bt_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_yuanjiao"
        android:text="开始验证"
        android:textColor="#2C3E54"
        android:textSize="20sp" />
</LinearLayout>