<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#FFD8BF"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_fun_train"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_fun_train"
                android:gravity="center_vertical"
                android:text="列车时刻"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#F77281"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_fun_weather"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_fun_weather"
                android:gravity="center_vertical"
                android:text="天气查询"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#C16C85"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_fun_step"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_fun_step"
                android:gravity="center_vertical"
                android:text="步数管理"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#6C5A7A"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/healthTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_fun_healthy"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_fun_healthy"
                android:gravity="center_vertical"
                android:text="健康贴士"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#345C7C"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/MovieMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_fun_music"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_fun_music"
                android:gravity="center_vertical"
                android:text="音乐电影"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#FFD8BF"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_fun_news"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_fun_news"
                android:gravity="center_vertical"
                android:text="新闻时事"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
